rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Users Collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Chats Collection
    // Senders need to read/write receiver documents to update chat metadata
    match /chats/{userId} {
      allow read, write: if request.auth != null;
    }

    // 3. Messages Collection
    // Security check based on the concatenated UID in the document ID
    match /messages/{messageId} {
      allow read, write: if request.auth != null && messageId.contains(request.auth.uid);
    }
  }
}
